#!/bin/bash

########################################################################################################################

THIS_SCRIPT=${BASH_SOURCE[0]:-$0}

while [[ "$(readlink $THIS_SCRIPT)" != '' ]]
do
  THIS_SCRIPT=$(readlink $THIS_SCRIPT)
done

RT_HOME=$(cd $(dirname $THIS_SCRIPT)/.. && pwd)

########################################################################################################################

if [[ -f /usr/local/rt/setup.sh ]]
then
   source /usr/local/rt/setup.sh
fi

########################################################################################################################

export BLINKA_MCP2221=1

export PYTHONPATH=$RT_HOME${PYTHONPATH:+:$PYTHONPATH}

########################################################################################################################

FLASK_APP=rt.app python3 -m flask run --host '0.0.0.0' --port 50000

########################################################################################################################
